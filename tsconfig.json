{
    "version": "1.5.0-alpha",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./ts/index.ts",
        "./ts/mymaths.ts",
        "./typings/globals/underscore/index.d.ts",
        "./typings/index.d.ts",
        "./typings/modules/debug/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
